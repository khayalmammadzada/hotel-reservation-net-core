@model IEnumerable<My_Project.Models.Blog>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Blog</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommentCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BlogTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BlogText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BlogTitle2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BlogText2)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/images/blog/@Html.DisplayFor(modelItem => item.Image)" alt="Alternate Text" style="width:60px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommentCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BlogTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BlogText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BlogTitle2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BlogText2)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success m-1"><i class="fas fa-edit"></i></a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary m-1"><i class="fas fa-info-circle"></i></a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger m-1">
                    <i class="fas fa-trash"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
